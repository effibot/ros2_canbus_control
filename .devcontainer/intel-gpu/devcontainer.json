{
    "name": "ROS2 CAN Bus Control - Intel GPU",
    "dockerComposeFile": [
        "compose.yaml"
    ],
    "service": "ros2_jazzy",
    "workspaceFolder": "/home/ubuntu/ros_ws",
    "shutdownAction": "stopCompose",
    "hostRequirements": {
        "gpu": "optional"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cmake-tools",
                "ms-python.python",
                "ms-python.flake8",
                "ms-python.autopep8",
                "charliermarsh.ruff",
                "smilerobotics.urdf",
                "redhat.vscode-xml",
                "redhat.vscode-yaml",
                "ms-vscode.makefile-tools",
                "eamodio.gitlens",
                "streetsidesoftware.code-spell-checker",
                "betwo.b2-catkin-tools",
                "Ranch-Hand-Robotics.rde-pack",
                "KevinRose.vsc-python-indent",
                "mgesbert.python-path",
                "zachflower.uncrustify",
                "aaron-bond.better-comments"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/bin/python3",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": false,
                "python.linting.flake8Enabled": true,
                "python.formatting.provider": "autopep8",
                "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
                "C_Cpp.default.compilerPath": "/usr/bin/gcc",
                "C_Cpp.default.cStandard": "c11",
                "C_Cpp.default.cppStandard": "c++17",
                "files.associations": {
                    "*.repos": "yaml",
                    "*.world": "xml",
                    "*.xacro": "xml",
                    "*.urdf": "xml",
                    "*.sdf": "xml"
                },
                "terminal.integrated.shell.linux": "/bin/bash",
                "ros.distro": "jazzy"
            }
        }
    },
    // Mounts for Intel GPU and graphics
    "mounts": [
        "source=${localEnv:HOME}/.ssh,target=/home/ubuntu/.ssh,type=bind,readonly",
        "source=${localWorkspaceFolder}/config/aliases.sh,target=/home/ubuntu/.bash_aliases,type=bind",
        "source=${localWorkspaceFolder}/config/nanorc,target=/home/ubuntu/.nanorc,type=bind",
        "source=${localWorkspaceFolder}/config/vimrc,target=/home/ubuntu/.vimrc,type=bind",
    ],
    // Set the default user
    "remoteUser": "ubuntu"
}