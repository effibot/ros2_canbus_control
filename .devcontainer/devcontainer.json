// See https://aka.ms/vscode-remote/devcontainer.json for format details.
{
	"name": "vscode_ros2_workspace",
    "dockerComposeFile": "../docker/compose.yaml",
    "service": "ros2_jazzy",
    "remoteUser": "ros",
    "initializeCommand": "",
    "postCreateCommand": "",
    "postAttachCommand": "",
    "updateContentCommand": "",
    "workspaceFolder": "/home/ros/ros_ws",
    "mounts": [
		"source=${localEnv:HOME}/.ssh,target=/home/ros/.ssh,type=bind,readonly",
		"source=${localWorkspaceFolder}/config/aliases.sh,target=/home/ros/.bash_aliases,type=bind",
		"source=${localWorkspaceFolder}/config/nanorc,target=/home/ros/.nanorc,type=bind",
		"source=${localWorkspaceFolder}/config/vimrc,target=/home/ros/.vimrc,type=bind"
    ],
	"containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}", // Needed for GUI try ":0" for windows
		"WAYLAND_DISPLAY": "${localEnv:WAYLAND_DISPLAY}",
		"XDG_RUNTIME_DIR": "${localEnv:XDG_RUNTIME_DIR}",
		"PULSE_SERVER": "unix:${localEnv:XDG_RUNTIME_DIR}/pulse/native",
		"ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST"
		// this is needed for hardware acceleration on nvidia gpus
		// uncomment if you are on ARM architecture
		// "LIBGL_ALWAYS_SOFTWARE": "1" // Needed for software rendering of opengl
	},
	// Set *default* container specific settings.json values on container create.
	"customizations": {
		"vscode": {
			"extensions": [
				"betwo.b2-catkin-tools",
				"DotJoshJohnson.xml",
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"ms-vscode.cpptools",
				"redhat.vscode-yaml",
				"smilerobotics.urdf",
				"streetsidesoftware.code-spell-checker",
				"twxs.cmake",
				"yzhang.markdown-all-in-one",
				"zachflower.uncrustify",
				"Ranch-Hand-Robotics.rde-pack"
			]
		}
	}
}
